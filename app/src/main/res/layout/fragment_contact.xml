<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

   <include layout="@layout/app_toolbar"/>

    <ScrollView
        android:layout_below="@+id/appToolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:gravity="center_horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/app_icon"
                />

            <TextView
                android:id="@+id/text_send"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:text="@string/app_name"
                android:textAlignment="center"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/text_about"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:text="@string/about_us"
                android:textAlignment="center"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/text_contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:text="@string/contact_us"
                android:textAlignment="center"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/contact_tg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/telegram"
                style="@style/TextAppearance.AppCompat.Widget.Button.Colored"
                android:text="@string/contact_tg"
                android:textColor="#000"
                android:drawableStart="@drawable/telegram" />
            <Button
                android:id="@+id/contact_email"
                android:layout_width="match_parent"
                android:drawableLeft="@drawable/email"
                style="@style/TextAppearance.AppCompat.Widget.Button.Colored"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:text="@string/contact_email"
                android:drawableStart="@drawable/email" />
            <Button
                android:id="@+id/contact_phone"
                style="@style/TextAppearance.AppCompat.Widget.Button.Colored"
                android:layout_width="match_parent"
                android:drawableLeft="@drawable/dial"
                android:layout_height="wrap_content"
                android:text="@string/contact_phone"
                android:textColor="#000"
                android:drawableStart="@drawable/dial" />

            <Button
                android:id="@+id/join_tg_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/tg"
                style="@style/TextAppearance.AppCompat.Widget.Button.Colored"
                android:text="@string/join_tg_group"
                android:textColor="#000"
                android:drawableStart="@drawable/tg" />
            <Button
                android:id="@+id/join_tg_channel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/tg"
                style="@style/TextAppearance.AppCompat.Widget.Button.Colored"
                android:text="@string/join_tg_channel"
                android:textColor="#000"
                android:drawableStart="@drawable/tg" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>